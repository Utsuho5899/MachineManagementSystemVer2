@model MachineManagementSystemVer2.Models.Employee

@{
    ViewData["Title"] = "員工詳情";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>員工</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EmployeeName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EmployeeName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EmployeeTitle)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EmployeeTitle)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EmployeePhone)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EmployeePhone)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.HireDate)</dt>
        <dd class="col-sm-10">@Model.HireDate.ToString("yyyy/MM/dd")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EmployeeAddress)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EmployeeAddress)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EmergencyContact)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EmergencyContact)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EmergencyPhone)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EmergencyPhone)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Account)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Account)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Remarks)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Remarks)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.EmployeeId" class="btn btn-primary">編輯</a>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</div>