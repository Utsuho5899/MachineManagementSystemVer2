@model MachineManagementSystemVer2.Models.Device

@{
    ViewData["Title"] = "刪除設備";
}

<h1>@ViewData["Title"]</h1>

<h3>您確定要刪除這筆資料嗎?</h3>
<div>
    <h4>設備</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SerialNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SerialNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Plant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plant.PlantName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeviceModel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeviceModel)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DeviceId" />
        <input type="submit" value="刪除" class="btn btn-danger" /> |
        <a asp-action="Index">返回列表</a>
    </form>
</div>