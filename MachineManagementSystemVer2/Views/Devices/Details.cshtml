@model MachineManagementSystemVer2.Models.Device

@{
    ViewData["Title"] = "設備詳情";
}

<h1>@Model.DeviceModel 設備詳情</h1>
<h4>位於：@Model.Plant.Customer.CustomerName - @Model.Plant.PlantName</h4>
<hr />

<div class="card shadow-sm mb-4">
    <div class="card-header"><h5 class="mb-0">設備基本資料</h5></div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">設備機型</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DeviceModel)</dd>

            <dt class="col-sm-3">出廠序號</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.SerialNumber)</dd>

            <dt class="col-sm-3">客戶產線代稱</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductionLine)</dd>

            <dt class="col-sm-3">備註</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Remark)</dd>
        </dl>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header"><h5 class="mb-0">相關維修案件</h5></div>
    <div class="card-body">
        @if (Model.RepairCases.Any())
        {
            <div class="list-group">
                @foreach (var repairCase in Model.RepairCases)
                {
                    <a asp-controller="RepairCases" asp-action="Details" asp-route-id="@repairCase.RepairCaseId" class="list-group-item list-group-item-action">
                        @repairCase.Title
                        <small class="text-muted">(開單人員: @repairCase.Employee.EmployeeName, 狀態: @repairCase.CaseStatus)</small>
                    </a>
                }
            </div>
        }
        else
        {
            <p class="text-muted">此設備尚無任何維修案件。</p>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.DeviceId" class="btn btn-primary">編輯設備</a>
    <a asp-controller="Plants" asp-action="Details" asp-route-id="@Model.PlantId" class="btn btn-secondary">返回廠區詳情</a>
</div>