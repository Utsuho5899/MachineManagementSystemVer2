@model MachineManagementSystemVer2.ViewModels.DeviceIndexViewModel

@{
    ViewData["Title"] = "設備總覽";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<style>
    .sort-link {
        text-decoration: none;
        color: inherit;
    }

        .sort-link:hover {
            color: #0b5ed7;
        }

        .sort-link .arrow {
            display: inline-block;
            width: 1.2em;
            text-align: center;
            color: #6c757d;
        }

            .sort-link .arrow.active {
                color: #0d6efd;
            }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <div>
        <a asp-controller="Devices" asp-action="Create" class="btn btn-primary">新增設備</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">回到首頁</a>
    </div>
</div>

<div class="card shadow-sm my-4">
    <div class="card-body">
        <form asp-action="Index" method="get" id="device-filter-form">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label asp-for="SearchCustomer" class="form-label">客戶名稱</label>
                    <input asp-for="SearchCustomer" class="form-control" placeholder="依客戶名稱篩選" />
                </div>
                <div class="col-md-3">
                    <label asp-for="SearchPlant" class="form-label">廠區名稱</label>
                    <input asp-for="SearchPlant" class="form-control" placeholder="依廠區名稱篩選" />
                </div>
                <div class="col-md-3">
                    <label asp-for="SearchModel" class="form-label">設備機型</label>
                    <input asp-for="SearchModel" class="form-control" placeholder="依設備機型篩選" />
                </div>
                <div class="col-md-3">
                    <div class="d-grid gap-2 d-md-flex">
                        <button type="submit" class="btn btn-primary">查詢</button>
                        <a asp-action="Index" class="btn btn-secondary">清除</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div id="devices-table-container">
    @await Html.PartialAsync("_DevicesTablePartial", Model)
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            function updateTable(url) {
                $('#devices-table-container').html('<div class="text-center p-5"><div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div></div>');
                $.ajax({
                    url: url,
                    type: 'GET',
                    success: function(result) {
                        $('#devices-table-container').html(result);
                    },
                    error: function() {
                        alert('載入資料失敗。');
                    }
                });
            }

            $('#devices-table-container').on('click', '.sort-link', function(e) {
                e.preventDefault();
                var url = $(this).attr('href');
                updateTable(url);
            });

            $('#device-filter-form').on('submit', function(e) {
                e.preventDefault();
                var url = $(this).attr('action') + '?' + $(this).serialize();
                updateTable(url);
            });
        });
    </script>
}