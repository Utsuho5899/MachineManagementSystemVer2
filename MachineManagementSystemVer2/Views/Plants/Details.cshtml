@model MachineManagementSystemVer2.Models.Plant

@{
    ViewData["Title"] = "廠區詳情";
}

<h1>@Model.PlantName 廠區詳情</h1>
<h4>隸屬於：@Model.Customer.CustomerName</h4>
<hr />

<div class="card shadow-sm mb-4">
    <div class="card-header"><h5 class="mb-0">廠區基本資料</h5></div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">廠區名稱</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PlantName)</dd>
            <dt class="col-sm-2">廠區代稱</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PlantCode)</dd>
            <dt class="col-sm-2">廠區地址</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PlantAddress)</dd>
            <dt class="col-sm-2">廠區電話</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PlantPhone)</dd>
        </dl>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header"><h5 class="mb-0">旗下設備列表</h5></div>
    <div class="card-body">
        @if (Model.Devices.Any())
        {
            <div class="list-group">
                @foreach (var device in Model.Devices)
                {
                    <a asp-controller="Devices" asp-action="Details" asp-route-id="@device.DeviceId" class="list-group-item list-group-item-action">
                        @device.DeviceModel <small class="text-muted">(@device.SerialNumber)</small> - 產線: @device.ProductionLine
                    </a>
                }
            </div>
        }
        else
        {
            <p class="text-muted">此廠區尚無建立任何設備。</p>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-controller="Customers" asp-action="Details" asp-route-id="@Model.CustomerId" class="btn btn-secondary">返回客戶詳情</a>
</div>