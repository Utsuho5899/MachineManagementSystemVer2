@model MachineManagementSystemVer2.ViewModels.PlantCreateViewModel

@{
    ViewData["Title"] = "新增廠區";
}

<style>
    .form-container {
        font-size: 16px;
    }

        .form-container .form-label {
            font-weight: 600;
        }
</style>

<div class="form-container">
    <h1>@ViewData["Title"]</h1>
    @if (!string.IsNullOrEmpty(Model.CustomerName))
    {
        <h4>為客戶：<span class="text-primary">@Model.CustomerName</span></h4>
    }
    <hr />

    <div class="row">
        <div class="col-md-10">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @* 這個隱藏欄位是整個功能的關鍵，它會將 CustomerId 傳回給 POST 方法 *@
                <input type="hidden" asp-for="CustomerId" />

                <div class="mb-3">
                    <label asp-for="PlantName" class="form-label"></label>
                    <input asp-for="PlantName" class="form-control" />
                    <span asp-validation-for="PlantName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PlantCode" class="form-label"></label>
                    <input asp-for="PlantCode" class="form-control" />
                    <span asp-validation-for="PlantCode" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PlantAddress" class="form-label"></label>
                    <input asp-for="PlantAddress" class="form-control" />
                    <span asp-validation-for="PlantAddress" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PlantPhone" class="form-label"></label>
                    <input asp-for="PlantPhone" class="form-control" />
                    <span asp-validation-for="PlantPhone" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-start mt-4">
                    <button type="submit" class="btn btn-primary">儲存廠區</button>
                    @* 返回按鈕現在可以正確地從 Model 取得 CustomerId *@
                    <a asp-controller="Customers" asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-secondary ms-2">返回客戶資料</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
