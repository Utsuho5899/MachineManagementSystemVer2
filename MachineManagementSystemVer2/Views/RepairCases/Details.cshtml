@model MachineManagementSystemVer2.ViewModels.RepairCaseDetailViewModel
@using MachineManagementSystemVer2.ViewModels

@{
    ViewData["Title"] = $"案件詳情 - {Model.Title}";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<style>
    /* 【修正】為最外層的容器設定一個較大的基礎字體 */
    .printable-area {
        font-size: 1.15rem; /* 從預設的 1rem (16px) 放大 */
    }
    .details-grid {
        display: grid;
        grid-template-columns: 120px 1fr 120px 1fr;
        gap: 0.75rem 1.5rem;
        align-items: center;
    }

        .details-grid dt {
            font-weight: 600;
            text-align: right;
            color: #6c757d;
        }

    .timeline-entry {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: .375rem;
        padding: 1rem;
    }
    .timeline-entry p {
            /* 2. 讓留言可以換行顯示 */
            white-space: pre-wrap;
    }
    .timeline-entry-footer {
        text-align: right;
        font-size: 0.9em;
        color: #6c757d;
        margin-top: 0.5rem;
        border-top: 1px dashed #ced4da;
        padding-top: 0.5rem;
    }
    /* 3. 將初始留言的樣式改為淺黃色背景 */
    .timeline-initial-desc {
        background-color: #fffbe6;
        border-color: #ffe58f;
    }

    .timeline-latest-desc {
        border-left: 5px solid #198754;
    }

    .toggle-middle-entries {
        cursor: pointer;
        color: #0d6efd;
        text-align: center;
        padding: 0.5rem;
        border: 1px dashed #0d6efd;
        margin: 1rem 0;
    }

        .toggle-middle-entries:hover {
            background-color: #e7f1ff;
        }

    @@media print {
        .no-print {
            display: none;
        }

        .printable-area, .printable-area * {
            visibility: visible;
        }

        .printable-area {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }
    }
</style>

<div class="printable-area">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@Model.Title</h1>
        <div>
            <span class="badge bg-primary rounded-pill fs-6 me-2">@Model.CaseStatus</span>
            <!-- 1. 列印按鈕改成回到案件列表按鈕 -->
            <a asp-action="Index" class="btn btn-secondary no-print"><i class="fas fa-list me-2"></i>回到案件列表</a>
        </div>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header"><h5 class="mb-0">維修案件詳細</h5></div>
        <div class="card-body">
            <dl class="details-grid">
                <dt>客戶</dt>
                <dd>@Model.CustomerName</dd>
                <dt>廠區</dt>
                <dd>@Model.PlantName</dd>
                <dt>設備</dt>
                <dd>@Model.DeviceName</dd>
                <dt>首發時間</dt>
                <dd>@Model.OccurredAt.ToString("yyyy-MM-dd HH:mm")</dd>
                <dt>入廠時間</dt>
                <dd>@Model.StartTime?.ToString("yyyy-MM-dd HH:mm")</dd>
                <dt>出廠時間</dt>
                <dd>@Model.EndTime?.ToString("yyyy-MM-dd HH:mm")</dd>
                <dt>客戶聯絡人</dt>
                <dd>@Model.CustomerContact</dd>
                <dt>備註</dt>
                <dd>@Model.CaseRemark</dd>
            </dl>
        </div>
    </div>

    <!-- 3. 描述與歷程大欄位想放到案件後續狀態進展上面 -->
    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <a class="h5 text-decoration-none text-dark d-flex justify-content-between" data-bs-toggle="collapse" href="#collapseTimeline" role="button" aria-expanded="true" aria-controls="collapseTimeline">
                <span><i class="fas fa-stream me-2"></i>案件描述與歷程</span>
                <i class="fas fa-chevron-down"></i>
            </a>
        </div>
        <div class="collapse show" id="collapseTimeline">
            <div class="card-body">
                <div class="text-end mb-3 no-print">
                    <div class="btn-group btn-group-sm" role="group">
                        <button type="button" class="btn btn-outline-secondary" id="sortOldest">由舊到新</button>
                        <button type="button" class="btn btn-outline-secondary active" id="sortNewest">由新到舊</button>
                    </div>
                </div>
                <!-- 【修正】將所有歷程項目都放在同一個容器中 -->
                <div id="caseTimelineList">
                    @foreach (var entry in Model.CaseTimeline)
                    {
                        @await Html.PartialAsync("_TimelineEntry", entry)
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- 案件後續狀態進展 (表單) -->
    <div class="card mb-4 shadow-sm no-print">
        <div class="card-header"><h5 class="mb-0"><i class="fas fa-edit me-2"></i>案件後續狀態進展</h5></div>
        <div class="card-body">
            <form id="updateCaseForm" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" name="caseId" value="@Model.RepairCaseId" />
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="NewStatus" class="form-label"></label>
                        <select asp-for="NewStatus" class="form-select" asp-items="Model.StatusList"></select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="NewPhoto" class="form-label"></label>
                        <input asp-for="NewPhoto" class="form-control" type="file" accept="image/*">
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="NewCommentContent" class="form-label"></label>
                    <textarea asp-for="NewCommentContent" class="form-control" rows="3" placeholder="請在此輸入詳細的處理過程或狀態說明..."></textarea>
                </div>
                <button type="submit" class="btn btn-info text-white">狀態更新</button>
                <div id="updateError" class="text-danger mt-2"></div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            var timelineList = $('#caseTimelineList');

            // --- 【修正】重寫排序和折疊的 JavaScript 邏輯 ---

            // 排序功能
            function sortTimeline(order) {
                var items = timelineList.children('.timeline-entry').get();
                items.sort(function(a, b) {
                    var keyA = $(a).data('timestamp');
                    var keyB = $(b).data('timestamp');
                    return (order === 'asc') ? (keyA > keyB ? 1 : -1) : (keyA < keyB ? 1 : -1);
                });
                $.each(items, function(i, el) {
                    timelineList.append(el); // 重新將排序後的項目加回容器
                });
                setupCollapsing(); // 排序後需要重新設定折疊
            }

            // 折疊功能
            function setupCollapsing() {
                // 先移除舊的按鈕和樣式
                $('#toggle-button').remove();
                timelineList.children('.timeline-entry').show().removeClass('middle-entry timeline-latest-desc');

                var entries = timelineList.children('.timeline-entry');
                if (entries.length > 2) {
                    // 將中間的項目隱藏起來
                    var middleEntries = entries.slice(1, -1).hide().addClass('middle-entry');

                    // 標記最後一個項目
                    entries.last().addClass('timeline-latest-desc');

                    // 插入展開按鈕
                    var toggleButton = $('<div id="toggle-button" class="toggle-middle-entries no-print"><i class="fas fa-ellipsis-h"></i> 顯示 ' + middleEntries.length + ' 筆中間歷程</div>');
                    entries.first().after(toggleButton);
                }
            }

            // 初始設定
            sortTimeline('desc'); // 預設由新到舊

            // 綁定排序按鈕事件
            $('#sortNewest').on('click', function() {
                sortTimeline('desc');
                $(this).addClass('active').siblings().removeClass('active');
            });
            $('#sortOldest').on('click', function() {
                sortTimeline('asc');
                $(this).addClass('active').siblings().removeClass('active');
            });

            // 綁定展開/收合按鈕事件 (使用事件委派)
            $('body').on('click', '#toggle-button', function() {
                var middleEntries = $('.middle-entry');
                var isHidden = middleEntries.is(':hidden');
                middleEntries.slideToggle(); // 使用動畫效果

                var icon = $(this).find('i');
                var textNode = $(this).contents().filter(function() { return this.nodeType == 3; }).first();

                if (isHidden) {
                    icon.removeClass('fa-ellipsis-h').addClass('fa-minus');
                    textNode.replaceWith(" 隱藏中間歷程");
                } else {
                    icon.removeClass('fa-minus').addClass('fa-ellipsis-h');
                    textNode.replaceWith(' 顯示 ' + middleEntries.length + ' 筆中間歷程');
                }
            });

            // --- 更新案件的 AJAX (維持不變) ---
            $('#updateCaseForm').on('submit', function(e) {
                e.preventDefault();
                $('#updateError').text('');
                var formData = new FormData(this);
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("UpdateCase", "RepairCases")',
                    data: formData,
                    headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                    contentType: false,
                    processData: false,
                    success: function(response) {
                        if (response.success) {
                            alert('案件已成功更新！');
                            location.reload();
                        } else {
                            $('#updateError').text(response.message || '更新失敗，請確認輸入內容。');
                        }
                    },
                    error: function() {
                         $('#updateError').text('與伺服器通訊失敗。');
                    }
                });
            });
        });
    </script>
}