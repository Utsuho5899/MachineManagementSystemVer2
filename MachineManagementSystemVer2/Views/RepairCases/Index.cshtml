@model MachineManagementSystemVer2.ViewModels.RepairCaseIndexViewModel

@{
    ViewData["Title"] = "維修案件總覽";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<style>
    .sort-link {
        text-decoration: none;
        color: inherit;
    }

        .sort-link:hover {
            color: #0b5ed7;
        }

        .sort-link .arrow {
            display: inline-block;
            width: 1.2em;
            text-align: center;
            color: #6c757d;
        }

            .sort-link .arrow.active {
                color: #0d6efd;
            }
</style>

<div class="d-flex justify-content-between align-items-center">
    <h1>@ViewData["Title"]</h1>
    <div>
        <a asp-action="Create" class="btn btn-primary">建立新案件</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">回到首頁</a>
    </div>
</div>

<!-- 篩選表單 -->
<div class="card shadow-sm my-4">
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label asp-for="SearchEmployeeId" class="form-label"></label>
                    <select asp-for="SearchEmployeeId" class="form-select" asp-items="Model.EmployeeList">
                        <option value="">-- 所有人員 --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="SearchStatus" class="form-label"></label>
                    <select asp-for="SearchStatus" class="form-select" asp-items="Model.StatusList">
                        <option value="">-- 所有狀態 --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label asp-for="SearchStartDate" class="form-label"></label>
                    <input asp-for="SearchStartDate" type="date" class="form-control" value="@Model.SearchStartDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-2">
                    <label asp-for="SearchEndDate" class="form-label"></label>
                    <input asp-for="SearchEndDate" type="date" class="form-control" value="@Model.SearchEndDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-2">
                    <div class="d-grid gap-2 d-md-flex">
                        <button type="submit" class="btn btn-primary">查詢</button>
                        <a asp-action="Index" class="btn btn-secondary">清除</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


<!-- 摘要數字 -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary">
            <div class="card-body text-center">
                <h5 class="card-title">總案件數</h5><p class="card-text fs-1 fw-bold">@Model.TotalCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-danger">
            <div class="card-body text-center">
                <h5 class="card-title">未結案數</h5><p class="card-text fs-1 fw-bold">@Model.OpenCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success">
            <div class="card-body text-center">
                <h5 class="card-title">已結案數</h5><p class="card-text fs-1 fw-bold">@Model.ClosedCount</p>
            </div>
        </div>
    </div>
</div>



<!-- 案件列表 -->
<div id="cases-table-container">
    @await Html.PartialAsync("_RepairCasesTablePartial", Model)
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // 使用事件委派，確保 AJAX 更新後的連結也能正常運作
            $('#cases-table-container').on('click', '.sort-link', function(e) {
                // 1. 阻止連結的預設跳轉行為
                e.preventDefault();

                var url = $(this).attr('href');

                // 2. 透過 AJAX 取得排好序的表格內容
                $.ajax({
                    url: url,
                    type: 'GET',
                    success: function(result) {
                        // 3. 將回傳的 HTML 內容，更新到表格容器中
                        $('#cases-table-container').html(result);
                    },
                    error: function() {
                        alert('載入資料失敗。');
                    }
                });
            });
        });
    </script>
    }
