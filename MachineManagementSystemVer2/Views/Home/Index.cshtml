@{
    ViewData["Title"] = "首頁";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<div class="text-center mb-5">
    <h1 class="display-4">設備維修管理系統</h1>
    <p class="lead">請選擇您要執行的功能</p>
</div>

<div class="row justify-content-center">

    @* 【權限控制】維修案件、客戶、設備等核心功能 *@
    @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Engineer"))
    {
        <div class="col-md-4">
            <a asp-controller="RepairCases" asp-action="Index" class="nav-card">
                <div class="card-body text-center">
                    <i class="fas fa-wrench fa-3x mb-3"></i>
                    <h5 class="card-title">維修案件</h5>
                    <p class="card-text">建立、查詢及管理所有維修案件</p>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Customers" asp-action="Index" class="nav-card">
                <div class="card-body text-center">
                    <i class="fas fa-building fa-3x mb-3"></i>
                    <h5 class="card-title">客戶管理</h5>
                    <p class="card-text">管理客戶基本資料與旗下廠區</p>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Devices" asp-action="Index" class="nav-card">
                <div class="card-body text-center">
                    <i class="fas fa-microchip fa-3x mb-3"></i>
                    <h5 class="card-title">設備管理</h5>
                    <p class="card-text">新增、查詢及維護設備履歷</p>
                </div>
            </a>
        </div>
    }

    @* 【權限控制】工程師 KPI *@
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <div class="col-md-4">
            <a asp-controller="Kpi" asp-action="Index" class="nav-card">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-3x mb-3"></i>
                    <h5 class="card-title">工程師KPI</h5>
                    <p class="card-text">查詢並分析工程師處理案件績效</p>
                </div>
            </a>
        </div>
    }

    @* 【權限控制】員工管理 *@
    @if (User.IsInRole("Admin") || User.IsInRole("HR"))
    {
        <div class="col-md-4">
            <a asp-controller="Employees" asp-action="Index" class="nav-card">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <h5 class="card-title">員工管理</h5>
                    <p class="card-text">管理公司員工資料與系統權限</p>
                </div>
            </a>
        </div>
    }
</div>

