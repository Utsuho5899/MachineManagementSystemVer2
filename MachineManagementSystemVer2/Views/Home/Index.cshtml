@model MachineManagementSystemVer2.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "系統儀表板";
}

<div class="text-center">
    <h1 class="display-4">歡迎回來！</h1>
    <p>這裡是設備維修管理系統儀表板</p>
</div>

<!-- 摘要資訊卡片 -->
<div class="row">
    <div class="col-md-3">
        <div class="card text-dark bg-danger mb-3">
            <div class="card-header">處理中案件</div>
            <div class="card-body">
                <h5 class="card-title">@Model.OpenCasesCount</h5>
                <p class="card-text">件</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-dark bg-success mb-3">
            <div class="card-header">已結案案件</div>
            <div class="card-body">
                <h5 class="card-title">@Model.ClosedCasesCount</h5>
                <p class="card-text">件</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-dark bg-warning mb-3">
            <div class="card-header">設備總數</div>
            <div class="card-body">
                <h5 class="card-title">@Model.TotalDevicesCount</h5>
                <p class="card-text">台</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-dark bg-info mb-3">
            <div class="card-header">客戶總數</div>
            <div class="card-body">
                <h5 class="card-title">@Model.TotalCustomersCount</h5>
                <p class="card-text">家</p>
            </div>
        </div>
    </div>
</div>

<!-- 最近維修案件列表 -->
<div class="row mt-4">
    <div class="col">
        <h3>最近維修案件</h3>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>案件No.</th>
                    <!-- 【新增】案件標題欄位 -->
                    <th>案件標題</th>
                    <th>狀態</th>
                    <th>廠區</th>
                    <th>設備</th>
                    <th>發生時間</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.RecentCases)
                {
                    <tr>
                        <td>@item.RepairCaseId</td>
                        <!-- 【新增】顯示案件標題 -->
                        <td>@item.Title</td>
                        <td><span class="badge bg-primary">@item.CaseStatus</span></td>
                        <td>@item.Plant.PlantName</td>
                        <td>@item.Device.DeviceModel</td>
                        <td>@item.OccurredAt.ToString("yyyy/MM/dd")</td>
                        <td>
                            <a asp-controller="RepairCases" asp-action="Details" asp-route-id="@item.RepairCaseId" class="btn btn-sm btn-outline-primary">檢視詳情</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

