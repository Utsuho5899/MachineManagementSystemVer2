@model IEnumerable<MachineManagementSystemVer2.Models.Customer>

@{
    ViewData["Title"] = "客戶總覽";
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <div>
        <a asp-action="Create" class="btn btn-primary">新增客戶</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">回到首頁</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerTaxId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerPhone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerAddress)
                    </th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerTaxId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerAddress)
                        </td>
                        <td>
                            <a asp-controller="Customers" asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-outline-info">詳情</a>
                            <a asp-controller="Customers" asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-sm btn-outline-secondary">編輯</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>