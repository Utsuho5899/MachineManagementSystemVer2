@model MachineManagementSystemVer2.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "系統登入";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="card shadow-lg">
    <div class="card-body p-5">
        <div class="text-center mb-4">
            <i class="fas fa-tools fa-3x text-primary mb-3"></i>
            <h1 class="h3 mb-3 fw-normal">設備維修管理系統</h1>
        </div>

        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                @* 【欄位放大】將標籤與輸入框分離 *@
                <div class="mb-3">
                    <label asp-for="Account" class="form-label"></label>
                    <input asp-for="Account" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="請輸入您的帳號" />
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" placeholder="請輸入您的密碼" />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">登入</button>
                </div>
            </form>
        </section>
    </div>
</div>
