<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 設備維修管理系統</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">設備維修管理系統</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">儀表板</a>
                            </li>

                            @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Engineer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="RepairCases" asp-action="Index">維修案件</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Customers" asp-action="Index">客戶管理</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Devices" asp-action="Index">設備管理</a>
                                </li>
                            }

                            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Kpi" asp-action="Index">工程師KPI</a>
                                </li>
                            }

                            @if (User.IsInRole("Admin") || User.IsInRole("HR"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Employees" asp-action="Index">員工管理</a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        @* 如果未登入，顯示一個空的 ul 以維持排版 *@
                        <ul class="navbar-nav flex-grow-1"></ul>
                    }

                    <div class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span class="navbar-text me-3">
                                歡迎, @User.Identity.Name!
                            </span>
                            <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="nav-link btn btn-link text-dark">登出</button>
                            </form>
                        }
                        else
                        {
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">登入</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - 設備維修管理系統
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>